ESPECIFICACION VectoresExt
    USA Booleanos, TipoRango, TipoElemento
    TIPO TVector

Operaciones
    // Const. generadoras
    CrearVector: -> TVector
    Asignar: TVector x TipoRango x TipoElemento -> TVector

    // Obser. no selectoras (Nuevas)
    EsVectorVacio: TVector -> Booleano
    MaximaPos: TVector -> TipoRango
    
    // Transformadoras (Nuevas)
    Permuta: TVector x TipoRango x TipoRango -> TVector

    // Operaciones Base (Asumidas necesarias para las ecuaciones)
    Valor: TVector x TipoRango -> TipoElemento
    EstaAsignada: TVector x TipoRango -> Booleano
    
    // Auxiliares (Comparación de índices pedida en el enunciado)
    Menor: TipoRango x TipoRango -> Booleano

VARIABLES
    v: TVector;
    i, j, pos: TipoRango;
    e: TipoElemento;

ECUACIONES
    // 1. EsVectorVacio
    // Un vector recién creado está vacío.
    EsVectorVacio(CrearVector) = Cierto
    // Si le asignamos algo, deja de estar vacío.
    EsVectorVacio(Asignar(v, i, e)) = Falso

    // 2. MaximaPos
    // Devuelve el índice más alto. Es parcial (no definida para CrearVector).
    // Recursividad: Compara el índice actual (i) con el máximo del resto del vector (v).
    MaximaPos(Asignar(v, i, e)) = 
        SI EsVectorVacio(v) ENTONCES i
        SINO SI Menor(i, MaximaPos(v)) ENTONCES MaximaPos(v)
        SINO i

    // 3. Permuta
    // Intercambia los valores de las posiciones i y j.
    // Solo si ambas posiciones tienen datos. Si no, devuelve el vector igual.
    // Usamos Asignar para sobrescribir 'i' con el valor de 'j', y 'j' con el valor de 'i'.
    Permuta(v, i, j) = 
        SI (EstaAsignada(v, i) Y EstaAsignada(v, j)) 
        ENTONCES Asignar( Asignar(v, i, Valor(v, j)), j, Valor(v, i) )
        SINO v