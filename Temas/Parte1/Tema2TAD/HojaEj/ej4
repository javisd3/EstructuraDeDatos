ESPECIFICACION CirculosExt
    USA Puntos, Reales, Booleanos
    TIPO TCirculo

Operaciones
    // Const. generadoras
    CrearCirculo: TPunto x Real -> TCirculo

    // Obser. no selectoras
    Area: TCirculo -> Real
    EstaEnPerimetro: TPunto x TCirculo -> Booleano
    Tangentes: TCirculo x TCirculo -> Booleano
    Secantes: TCirculo x TCirculo -> Booleano
    Disjuntos: TCirculo x TCirculo -> Booleano

    // Auxiliares (Asumidas de otros TADs)
    Distancia: TPunto x TPunto -> Real
    Abs: Real -> Real
    Pi: -> Real

VARIABLES
    p, c1, c2: TPunto;
    r, r1, r2: Real;

ECUACIONES
    // Area
    // Pi por radio al cuadrado
    Area(CrearCirculo(c1, r)) = Pi * r * r

    // EstaEnPerimetro
    // Distancia del punto al centro igual al radio
    EstaEnPerimetro(p, CrearCirculo(c1, r)) = (Distancia(p, c1) = r)

    // Tangentes
    // Distancia igual a la suma (exterior) O igual a la diferencia (interior)
    Tangentes(CrearCirculo(c1, r1), CrearCirculo(c2, r2)) = 
        (Distancia(c1, c2) = (r1 + r2)) O 
        (Distancia(c1, c2) = Abs(r1 - r2))

    // Secantes
    // Distancia menor que suma Y mayor que diferencia (se cruzan en dos puntos)
    Secantes(CrearCirculo(c1, r1), CrearCirculo(c2, r2)) = 
        (Distancia(c1, c2) < (r1 + r2)) Y 
        (Distancia(c1, c2) > Abs(r1 - r2))

    // Disjuntos
    // Distancia mayor que suma (separados) O menor que diferencia (uno dentro de otro)
    Disjuntos(CrearCirculo(c1, r1), CrearCirculo(c2, r2)) = 
        (Distancia(c1, c2) > (r1 + r2)) O 
        (Distancia(c1, c2) < Abs(r1 - r2))