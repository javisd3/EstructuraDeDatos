ESPECIFICACION Fracciones
    USA Enteros, Booleanos
    TIPO TipoFraccion

Operaciones
    // Const. generadoras
    // El segundo entero no puede ser 0
    CrearFraccion: Entero x Entero -> TipoFraccion

    // Obser. selectoras (del término canónico) 
    NumeradorCanonico: TipoFraccion -> Entero
    DenominadorCanonico: TipoFraccion -> Entero

    // Obser. no selectoras
    EsEntero: TipoFraccion -> Booleano 
    EsFraccionNula: TipoFraccion -> Booleano 
    Menor: TipoFraccion x TipoFraccion -> Booleano 

    // Transformadoras (Aritmética) 
    Suma: TipoFraccion x TipoFraccion -> TipoFraccion
    Resta: TipoFraccion x TipoFraccion -> TipoFraccion
    Multiplicacion: TipoFraccion x TipoFraccion -> TipoFraccion
    Division: TipoFraccion x TipoFraccion -> TipoFraccion

    // Auxiliares (Del TAD Entero, citadas en )
    Mcd: Entero x Entero -> Entero
    Abs: Entero -> Entero
    Signo: Entero -> Entero

VARIABLES
    a, c: Entero;
    b, d: Entero; // Se asume b, d != 0 para las generadoras
    f1, f2: TipoFraccion;
    m: Entero; // Variable auxiliar para el MCD

ECUACIONES
    // ---------------------------------------------------------
    // ECUACIONES ENTRE GENERADORAS (Normalización) 
    // ---------------------------------------------------------
    
    // Caso 1: Numerador 0 -> La fracción canónica es 0/1 
    CrearFraccion(0, b) = CrearFraccion(0, 1)

    // Caso 2: Signo en el denominador -> Se pasa al numerador
    // (Solo si a != 0, para no chocar con la regla anterior)
    CrearFraccion(a, b) = SI (a <> 0 Y b < 0) 
                          ENTONCES CrearFraccion(-a, -b)
    
    // Caso 3: Reducción (Simplificación)
    // Si el MCD > 1 y el signo ya está corregido (b > 0)
    CrearFraccion(a, b) = SI (b > 0 Y Mcd(Abs(a), b) > 1)
                          ENTONCES CrearFraccion(a DIV Mcd(Abs(a), b), b DIV Mcd(Abs(a), b))

    // ---------------------------------------------------------
    // OPERACIONES
    // ---------------------------------------------------------

    // Obser. selectoras
    // Gracias a las ecuaciones de arriba, 'a' y 'b' ya están simplificados aquí.
    NumeradorCanonico(CrearFraccion(a, b)) = a
    DenominadorCanonico(CrearFraccion(a, b)) = b

    // EsFraccionNula
    // Es nula si el numerador canónico es 0
    EsFraccionNula(f1) = (NumeradorCanonico(f1) = 0)

    // EsEntero
    // Es entero si el denominador canónico es 1 (ej: 4/1 = 4)
    EsEntero(f1) = (DenominadorCanonico(f1) = 1)

    // Menor
    // Comparamos multiplicando en cruz: a/b < c/d <=> a*d < c*b
    // Al usar Numerador/DenominadorCanonico aseguramos b, d > 0, así que la desigualdad no se invierte.
    Menor(f1, f2) = (NumeradorCanonico(f1) * DenominadorCanonico(f2)) < 
                    (NumeradorCanonico(f2) * DenominadorCanonico(f1))

    // Aritmética básica
    // Se aplican las fórmulas matemáticas estándar. 
    // Las ecuaciones generadoras se encargarán automáticamente de simplificar el resultado.
    
    // Suma: (a/b) + (c/d) = (ad + bc) / bd
    Suma(f1, f2) = CrearFraccion(
        (NumeradorCanonico(f1) * DenominadorCanonico(f2)) + (NumeradorCanonico(f2) * DenominadorCanonico(f1)),
        DenominadorCanonico(f1) * DenominadorCanonico(f2)
    )

    // Resta: (a/b) - (c/d) = (ad - bc) / bd
    Resta(f1, f2) = CrearFraccion(
        (NumeradorCanonico(f1) * DenominadorCanonico(f2)) - (NumeradorCanonico(f2) * DenominadorCanonico(f1)),
        DenominadorCanonico(f1) * DenominadorCanonico(f2)
    )

    // Multiplicacion: (a/b) * (c/d) = (ac) / (bd)
    Multiplicacion(f1, f2) = CrearFraccion(
        NumeradorCanonico(f1) * NumeradorCanonico(f2),
        DenominadorCanonico(f1) * DenominadorCanonico(f2)
    )

    // Division: (a/b) / (c/d) = (ad) / (bc)
    Division(f1, f2) = CrearFraccion(
        NumeradorCanonico(f1) * DenominadorCanonico(f2),
        DenominadorCanonico(f1) * NumeradorCanonico(f2)
    )